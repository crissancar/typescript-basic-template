  "license": "ISC",
  "description": "TypeScript basic use template",
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.json",
    "dev": "NODE_ENV=dev ts-node-dev --respawn --ignore-watch node_modules ./src/index.ts",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint src/**/*.ts --fix",
    "lint:prettier": "prettier src/**/*.ts --write",
    "test": "npm run test:unit",
    "test:unit": "jest --config ./jest.config.json"
  },
  "dependencies": {
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  }
}
